extends layout

block content
  .page-container(ng-controller="ProjectsCtrl")
    h1.page-title Nos projets
    .project-selector
      label(for="logement") 
        input#logement(type="checkbox" value="logement" checked)
        span.dark-yellow-text.label-text Logements
      label(for="industriel")
        input#industriel(type="checkbox" value="industriel" checked)
        span.dark-yellow-text.label-text Industriels
      label(for="public")
        input#public(type="checkbox" value="public" checked)
        span.dark-yellow-text.label-text BÃ¢timents publics
    .project-grid
      .project-grid-item(ng-repeat="project in projects | orderBy:'year':true" ng-class="project.family" ng-style="{'background-image': 'url(' + project.photos[0] + ')'}")
        .info-box
          p.project-grid-title {{project.name}}
          p.small-address {{project.address}}
        .project-grid-item-overlay(ng-click="openProject(project._id)")

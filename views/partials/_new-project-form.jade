.dashboard-form.new-project-form
  h3 Nouveau Projet
  form(name="newProjectForm")
    label Nom du projet
    br
    input(type="text" ng-model="newProject.name" required)
    br
    label Famille
    br
    select(ng-model="newProject.family" required)
      option(value="Logements") Logements
      option(value="Industriel") Industriel
      option(value="Bat-Public") Bâtiment public
    br
    label Description
    br
    textarea(cols="50" rows="10" ng-model="newProject.description" placeholder="Votre texte ici" required)
    br
    label Partenaire
    br
    input(type="text" ng-model="newProject.partner")
    br
    label Référence
    br
    input(type="text" ng-model="newProject.reference")
    br
    label Les photos apparaissent sur la page d'accueil
    input(type="checkbox" ng-model="newProject.front_page")
    br
    label Date de début de projet
    br
    input(type="text" ng-model="newProject.date_started")
    br
    label Date de fin de projet
    br
    input(type="text" ng-model="newProject.date_completed")
    br
    br
    button.btn.btn-success(type="submit" ng-click="saveNewProject()" ng-disabled="newProjectForm.$invalid") Enregistrer
    button.btn.btn-danger.close-dashboard-overlay Annuler
